<AnchorPane id="AnchorPane" prefHeight="750.0" prefWidth="1600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.AddTicketController">
   <children>
      <VBox prefHeight="750.0" prefWidth="270.0" style="-fx-background-color: purple;">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="39.0" prefWidth="129.0" text="Ajout_Ticket" textAlignment="CENTER" textFill="WHITE" translateX="10.0">
               <VBox.margin>
                  <Insets bottom="50.0" left="50.0" right="50.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            <TextField fx:id="tfprice" promptText="Price">
               <VBox.margin>
                  <Insets bottom="30.0" left="50.0" right="50.0" />
               </VBox.margin>
               <font>
                  <Font name="Calibri Light" size="12.0" />
               </font>
            </TextField>
            <TextField fx:id="tfevent_id" promptText="Event_id">
               <font>
                  <Font name="Calibri Light" size="12.0" />
               </font>
               <VBox.margin>
                  <Insets left="50.0" right="50.0" />
               </VBox.margin>
            </TextField>
            <Button mnemonicParsing="false" onAction="#AddTicket" prefHeight="32.0" prefWidth="73.0" style="-fx-background-color: #4cb842;" text="Add" textAlignment="CENTER" textFill="WHITE">
               <VBox.margin>
                  <Insets bottom="10.0" left="90.0" right="50.0" top="50.0" />
               </VBox.margin>
               <opaqueInsets>
                  <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
               </opaqueInsets>
               <padding>
                  <Insets bottom="5.0" left="20.0" right="20.0" top="10.0" />
               </padding>
            </Button>
            <Button mnemonicParsing="false" onAction="#deleteTicket" style="-fx-background-color: #4cb842;" text="delete" textAlignment="CENTER" textFill="WHITE">
               <opaqueInsets>
                  <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
               </opaqueInsets>
               <padding>
                  <Insets bottom="5.0" left="20.0" right="20.0" top="10.0" />
               </padding>
               <VBox.margin>
                  <Insets left="90.0" right="50.0" />
               </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#UpdateTicket" style="-fx-background-color: #4cb842;" text="Update" textAlignment="CENTER" textFill="WHITE">
               <opaqueInsets>
                  <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
               </opaqueInsets>
               <padding>
                  <Insets bottom="5.0" left="20.0" right="15.0" top="10.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="10.0" left="90.0" right="40.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
      <VBox layoutX="391.0" prefHeight="700.0" prefWidth="678.0">
         <children>
            <TableView fx:id="textV" onMouseClicked="#show_details" prefHeight="555.0" prefWidth="678.0">
              <columns>
                <TableColumn fx:id="col_idT" prefWidth="109.0" text="Id_ticket" />
                <TableColumn fx:id="col_priceT" prefWidth="127.0" text="Price" />
                  <TableColumn fx:id="col_eventId" prefWidth="122.0" text="Event_Id" />
              </columns>
            </TableView>
         </children>
      </VBox>
   </children>
